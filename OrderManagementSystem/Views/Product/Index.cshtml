@model List<OrderManagementSystem.Models.Product> 

@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>

<!-- Product List Table -->
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) 
            {
                <tr>
                    <td>@product.Id</td> <!-- Access the Id of each product -->
                    <td>@product.Name</td> <!-- Access the Name of each product -->
                    <td>@product.Description</td> <!-- Access the Description of each product -->
                    <td>@product.Price.ToString("C")</td> <!-- Format the Price to currency -->
                    <td><img src="@product.ImageUrl" alt="@product.Name" width="100" /></td> <!-- Display product image -->
                </tr>
            }
        </tbody>
    </table>

    <!-- Add Product Button -->
    <a href="/Product/Create" class="btn btn-primary">Add Product</a>
</div>